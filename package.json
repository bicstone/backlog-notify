{
  "name": "backlog-notify",
  "private": true,
  "description": "Notify commit messages to Backlog issue",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn lint --fix && yarn format && ncc build ./src/main.ts --target es2021 --license index.js.LICENSE.txt",
    "lint": "eslint --ext .ts ./src/ --max-warnings 0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bicstone/backlog-notify.git"
  },
  "keywords": [
    "GitHub Actions",
    "actions",
    "Nulab",
    "Backlog",
    "Nulab Backlog",
    "Notify",
    "Project management"
  ],
  "author": "Oishi Takanori",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@octokit/webhooks-examples": "6.3.6",
    "axios": "0.27.2",
    "lodash.template": "4.5.0"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "6.3.6",
    "@types/jest": "29.1.1",
    "@types/lodash.template": "4.5.1",
    "@types/node": "16.x.x",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "@vercel/ncc": "0.34.0",
    "all-contributors-cli": "6.22.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-regexp": "1.9.0",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "jest-mock": "29.1.2",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "volta": {
    "node": "16.14.0",
    "yarn": "1.22.17"
  }
}
