{
  "name": "backlog-notify",
  "private": true,
  "description": "Notify commit messages to Backlog issue",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint --fix && npm run format && ncc build ./src/main.ts --target es2021 --license index.js.LICENSE.txt",
    "lint": "eslint --ext .ts ./src/ --max-warnings 0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bicstone/backlog-notify.git"
  },
  "keywords": [
    "GitHub Actions",
    "actions",
    "Nulab",
    "Backlog",
    "Nulab Backlog",
    "Notify",
    "Project management"
  ],
  "author": "Oishi Takanori",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0",
    "axios": "1.1.3",
    "lodash.template": "4.5.0"
  },
  "devDependencies": {
    "@octokit/webhooks-examples": "7.2.0",
    "@octokit/webhooks-types": "7.2.0",
    "@types/jest": "29.5.3",
    "@types/lodash.template": "4.5.1",
    "@types/node": "16.18.41",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "@vercel/ncc": "0.36.1",
    "all-contributors-cli": "6.26.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-regexp": "1.15.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "jest-mock": "29.6.2",
    "prettier": "3.0.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "volta": {
    "node": "16.20.2"
  }
}
